mixin home()
    - var prev = page.prev_link
    - var next = page.next_link
    .paginator
        if page.prev
            a.prev(href=url_for(prev))!= __('← 看看近况')
        if page.next
            a.next(href=url_for(next))!= __('翻翻旧账 →')

mixin post()
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    .paginator
        if prev
            a.prev(href=url_for(prev))!= __('← '+page.prev.title)
        if next
            a.next(href=url_for(next))!= __(page.next.title+' →')
