meta(charset="utf-8")
meta(name="X-UA-Compatible", content="IE=edge")

title
    block site_title
        = config.title
block description
    meta(name="description", content= config.description ? config.description : 'filosfino\'s blog')

meta(name="viewport", content="width=device-width, initial-scale=1")
link(rel="icon", href=url_for(theme.favicon))
link(rel="stylesheet", href=url_for("css/apollo.css"))
link(rel="stylesheet", href=url_for("//cdnjs.cloudflare.com/ajax/libs/KaTeX/0.9.0/katex.min.css"))

- var xml = config.url + '/atom.xml'
    link(rel="alternate", type="application/atom+xml", href=xml, title=config.title)
